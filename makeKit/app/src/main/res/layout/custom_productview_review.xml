<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_margin="20dp"
    android:gravity="center"
    android:layout_height="wrap_content"
    tools:ignore="WebViewLayout">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/linearImage_productviewreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="@drawable/layout_outline"
            >

            <WebView
                android:id="@+id/imgReview_productcview"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:orientation="vertical"
                android:padding="5dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/writerReview_productview"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:padding="5dp"
                        android:textStyle="bold"
                        />


                    <TextView
                        android:id="@+id/StarReview_productview"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/writerDateReview_productview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:padding="5dp"
                    />

        <!--        <LinearLayout-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:orientation="horizontal"-->
        <!--            >-->

                <TextView
                    android:id="@+id/contentReview_productview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:padding="10dp"
                    />

        <!--        </LinearLayout>-->
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearNonImage_productviewreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="@drawable/layout_outline"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:orientation="vertical"
                android:padding="5dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/writerReviewNon_productview"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:padding="5dp"
                        android:textStyle="bold"
                        />


                    <TextView
                        android:id="@+id/StarReviewNon_productview"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/writerDateReviewNon_productview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:padding="5dp"
                    />

                <TextView
                    android:id="@+id/contentReviewNon_productview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:padding="10dp"
                    />

            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
</LinearLayout>