<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".makekit_activity.OrderActivity"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="주문서 작성"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="20dp"
        android:background="#9A1E0405"
        android:textColor="@color/white"

        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_weight="8"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#EDE8E6E6"

            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"

                >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="주문자 정보"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:background="#00000000"
                    android:layout_marginBottom="20dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="이름"
                        android:textSize="18dp"
                        />

                    <EditText
                        android:id="@+id/order_userName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="사용자 이름"
                        android:layout_weight="1"
                        android:textSize="18dp"
                        android:editable="false"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="전화번호"
                        android:textSize="18dp"
                        />

                    <EditText
                        android:id="@+id/order_userTel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="전화번호"
                        android:layout_weight="1"
                        android:textSize="18dp"
                        android:editable="false"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="주소"
                        android:textSize="18dp"
                        />

                    <EditText
                        android:id="@+id/order_userAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="주소"
                        android:layout_weight="1"
                        android:textSize="18dp"
                        android:editable="false"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="상세 주소"
                        android:textSize="18dp"
                        />

                    <EditText
                        android:id="@+id/order_userAddressDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="상세 주소"
                        android:layout_weight="1"
                        android:textSize="18dp"
                        android:editable="false"
                        />
                </LinearLayout>
            </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/korean"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="배송지"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:background="#00000000"
                    />

                <CheckBox
                    android:id="@+id/order_info_checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="주문자 정보와 동일"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="이름"
                        android:textSize="18dp"
                        />

                    <EditText
                        android:id="@+id/order_receiverName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="수령인"
                        android:layout_weight="1"
                        android:textSize="18dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="전화번호"
                        android:textSize="18dp"
                        />

                    <EditText
                        android:id="@+id/order_receiverTel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="전화번호"
                        android:layout_weight="1"
                        android:textSize="18dp"
                        android:inputType="number"
                        android:maxLength="13"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="주소"
                        android:textSize="18dp"
                        />

                    <EditText
                        android:id="@+id/order_receiverAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="주소"
                        android:layout_weight="1"
                        android:textSize="18dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="상세 주소"
                        android:textSize="18dp"
                        />

                    <EditText
                        android:id="@+id/order_receiverAddressDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="상세 주소"
                        android:layout_weight="1"
                        android:textSize="18dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_outline"
                    android:layout_marginTop="10dp"
                    >
                    <Spinner
                        android:id="@+id/order_requestComent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints="배송시 요청사항을 입력해주세요"
                        />
                </LinearLayout>
            </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="상품 정보"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:background="#00000000"
                    android:layout_marginBottom="20dp"
                    />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_product_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbarFadeDuration="0"
                        android:scrollbarSize="5dp"
                        android:scrollbars="vertical"
                        android:scrollbarThumbVertical="@android:color/darker_gray"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:text="상품 금액"
                                android:textSize="15dp"
                                android:gravity="center"
                                />

                            <TextView
                                android:id="@+id/productTotalPrice_order"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="8"
                                android:textSize="15dp"
                                android:gravity="center"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="15dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:text="배송비"
                                android:textSize="15dp"
                                android:gravity="center"
                                />

                            <TextView
                                android:id="@+id/productDeliveryTotalPrice_order"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="8"
                                android:textSize="15dp"
                                android:gravity="center"
                                />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_centerInParent="true"
                            android:background="#9E9D95"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:text="구매 총 금액"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:gravity="center"
                                />

                            <TextView
                                android:id="@+id/allProductTotalPrice_order"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="8"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:gravity="center"
                                />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="결제 정보"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:background="#00000000"
                    android:layout_marginBottom="20dp"
                    />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <LinearLayout
                            android:id="@+id/ll_btnCard_order"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:padding="5dp">

                            <Button
                                android:id="@+id/btnCard_order"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="신용카드"
                                android:stateListAnimator="@null"
                                android:textColor="@color/white"/>
                        </LinearLayout>

                   <LinearLayout
                       android:id="@+id/ll_btnClickCard_order"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:visibility="invisible"
                       >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:paddingRight="5dp">

                            <Button
                                android:id="@+id/btnCardClick_order"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="신용카드"
                                android:stateListAnimator="@null"
                                android:textColor="@color/white"
                                android:layout_marginBottom="10dp"/>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/layout_outline"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            >
                            <Spinner
                                android:id="@+id/cardSelect_order"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:autofillHints="카드를 선택해주세요"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="카드번호"
                                android:textSize="18dp"
                                />

                            <EditText
                                android:id="@+id/cardNumber_order"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="카드번호"
                                android:layout_weight="1"
                                android:textSize="18dp"
                                android:inputType="number"
                                android:maxLength="14"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="카드 비밀번호"
                                android:textSize="18dp"
                                />

                            <EditText
                                android:id="@+id/cardPW_order"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="카드 비밀번호"
                                android:layout_weight="1"
                                android:textSize="18dp"
                                android:inputType="numberPassword"
                                android:maxLength="4"
                                />
                        </LinearLayout>
                   </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/order_payment_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="결제하기"
        android:textColor="@color/white"
        android:stateListAnimator="@null"
        android:textSize="20dp"
        />
</LinearLayout>
