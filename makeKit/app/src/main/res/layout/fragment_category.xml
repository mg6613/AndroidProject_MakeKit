<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.makekit.makekit_fragment.CategoryFragment"
    >

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"

        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="30dp"
        >

        <ImageView
            android:id="@+id/korean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:src="@drawable/category5" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"

        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"

        card_view:cardCornerRadius="30dp">

        <ImageView
            android:id="@+id/american"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/category1" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"

        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="30dp">

        <ImageView
            android:id="@+id/chinese"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/category2" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"

        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="30dp">

        <ImageView
            android:id="@+id/etc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/category3" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"

        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="30dp">

        <ImageView
            android:id="@+id/set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/category4" />
    </androidx.cardview.widget.CardView>



</LinearLayout>