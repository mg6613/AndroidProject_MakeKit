<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".makekit_activity.UserModifyActivity">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:text="회원정보수정"
        android:textStyle="bold"
        android:background="@color/brown"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textSize="20dp"/>
</LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="10"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp">

            <WebView
                android:id="@+id/user_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_user"
                android:visibility="visible"
                />
            <ImageView
                android:id="@+id/user_image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_user"
                android:visibility="invisible"/>
        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        >
        <TextView
            android:id="@+id/tv_editPeopleImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="사진 편집"
            />
    </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="이메일 :"
                    android:textSize="18dp"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp"
                    />

                <TextView
                    android:id="@+id/user_email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center|left"
                    android:hint="이메일"
                    android:paddingLeft="10dp"
                    android:textSize="18dp"

                    />
                </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="이름 :"
                android:gravity="right"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center|left"
                    android:hint="이름"
                    android:paddingLeft="10dp"
                    android:textSize="18dp"

                    />

        </LinearLayout>

        <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="비밀번호 :"
                    android:textSize="18dp"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp"
                    />


                <TextView
                    android:id="@+id/user_pw"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center|left"
                    android:hint="기존 비밀번호"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:textSize="18dp"
                    android:enabled="false"/>
 </LinearLayout>

<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18dp"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp"
                    />
                <EditText
                    android:id="@+id/user_pwcheck"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"

                    android:gravity="center|left"
                    android:hint="비밀번호 확인"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:textSize="18dp" />
</LinearLayout>
<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18dp"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp"
                    />
            <TextView
                android:id="@+id/tv_pwCheckMsg_user"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.7" />
</LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="주소 :"
                    android:textSize="18dp"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp"
                    />

                <TextView
                    android:id="@+id/user_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:paddingLeft="10dp"
                    android:textSize="18dp"
                    android:enabled="false"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/userModiAddress_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주소찾기"
                    android:stateListAnimator="@null"
                    />
        </LinearLayout>
     <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18dp"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp"
                    />
            <EditText
                android:id="@+id/user_addressdetail"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center|left"
                android:hint="상세주소입력"
                android:paddingLeft="10dp"
                android:textSize="18dp" />


</LinearLayout>
  <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="전화번호 :"
                    android:textSize="18dp"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp"
                    />
                <EditText
                    android:id="@+id/user_tel"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
android:layout_marginBottom="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center|left"
                    android:hint="휴대폰"
                    android:maxLength="13"
                    android:paddingLeft="10dp"
                    android:textSize="18dp"

                    />
  </LinearLayout>
  <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
      android:gravity="center"
                    >
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="생일 :"
                    android:textSize="18dp"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp"
                    />




                <TextView
                    android:id="@+id/user_birth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="생일"
                    android:inputType="date"
                    android:maxLength="13"
                    android:textSize="18dp"
                    android:enabled="false"
                    android:paddingLeft="10dp"

                    android:layout_weight="1"
                    />

                    <Button
                        android:id="@+id/user_birth_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="생년월일"
                        android:stateListAnimator="@null"
                        android:background="@drawable/calendar" />

  </LinearLayout>


            <Button
                android:id="@+id/user_update_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="수정완료"
                android:stateListAnimator="@null"
                android:layout_marginBottom="10dp"/>



        </LinearLayout>
    </ScrollView>

</LinearLayout>