<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EDE8E6E6"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:cardCornerRadius="10dp">

                <WebView
                    android:id="@+id/reviewlist_sales_productImage"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_user"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/reviewlist_productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="상품명"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_productQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="수량 : "
                    android:layout_marginBottom="10dp"
                    />
                <TextView
                    android:id="@+id/reviewlist_productQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="1"
                    android:layout_marginLeft="5dp"
                    />

            </LinearLayout>


                <TextView
                    android:id="@+id/Textview_RegisterReview"
                    android:layout_width="280dp"
                    android:layout_height="40dp"
                    android:background="@drawable/layout_outline"
                    android:backgroundTint="@color/brown"
                    android:text="구매 후기 작성하기"
                    android:textColor="@color/white"
                    android:layout_gravity="center|bottom"
                    android:gravity="center"/>


        </LinearLayout>

